	}
}

@media ( min-width: 370px ) and ( min-aspect-ratio: 13/9 ) {
	#frbanner-form {
		padding: 20px 15px 15px;
		width: 37%;
		float: right;
	}
}

@media ( min-width: 570px ) and ( min-aspect-ratio: 13/9 ) {
	#frbanner-form {
		padding: 30px 20px 20px;
