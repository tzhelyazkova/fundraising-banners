/* progress bar */
#donationMeterWrapper {
	position: relative;
	margin-bottom: 15px;
}

#donationMeter {
	margin: 0 auto;
	height: 40px;
	background: #ff4d22;
	border-radius: 8px;
}

#donationFill {
	position: absolute;
	display: block;
	top: 0;
	left: 0;
	width: 0;
	height: 40px;
	background: #257eb0;
	border-top-left-radius: 8px;
	border-bottom-left-radius: 8px;
}

#pbarTip {
	position: absolute;
	right: 0;
	height: 40px;
	width: 2px;
	background-color: #fff;
}

#daysLeft {
	display: block;
	font-size: 16pt;
	color: #fff;
	font-weight: bold;
	line-height: 40px;
	position: absolute;
	padding-left: 5px;
}

#donationTooltipArrow {
	display: none;
	border-bottom: 10px solid #ff4d22;
	border-left: 10px solid transparent;
	border-right: 10px solid transparent;
	height: 0;
	left: 180px;
	position: relative;
	top: 41px;
	width: 0;
	z-index: 1100;
}

#donationTooltip {
	display: none;
	background-color: #ff4d22;
	border-radius: 10px;
	box-shadow: 1px 1px 1px #888;
	color: #fff;
	font-size: 17px;
	font-weight: bold;
	left: 70px;
	padding: 5px 10px;
	position: relative;
	text-align: center;
	top: 41px;
	width: 240px;
	z-index: 1100;
}

