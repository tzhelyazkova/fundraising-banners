#frbanner-form:before {
	height: 0;
	width: 0;
	margin-left: -10px;
	content: ' ';
	position: absolute;
	left: 50%;
	top: 0;
	border: solid transparent;
	pointer-events: none;
	border-top-color: #fff;
	border-width: 10px;
}

@media ( min-width: 370px ) and ( min-aspect-ratio: 13/9 ) {
	#frbanner-form:before {
		left: 0;
		top: 50%;
		margin: 0;
		border: solid transparent;
		pointer-events: none;
		border-left-color: #fff;
		border-width: 10px;
	}
}

