/* --- Dynamic highlighting --- */

#frbanner .highlight,
#frbanner2 #mini-highlight .highlight {
	background-color: #ff0;
	color: #000;
	font-weight: normal;
}

#to-highlight span:first-child {
	padding-left: 5px;
	margin-left: -5px;
}

#to-highlight span:last-child {
	padding-right: 5px;
	margin-right: -5px;
}

#frbanner-window .frbanner-message .highlight {
	line-height: 1.2;
}

/* --- Static highlighting --- */

