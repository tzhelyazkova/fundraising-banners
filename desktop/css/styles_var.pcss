:root {
	--banner-color-gray: #808080;
}

#WMDE_Banner-form {
	.select-group {
		&__custom-input {
			&:focus,
			&:active {
				border: 0;
				border-bottom: 1px solid var( --banner-color-gray );
			}
			border: 0;
			border-radius: 0.4em;
			border-bottom: 1px solid var( --banner-color-gray );
			background-color: unset;
			width: 70%;
			margin: 0 3em;
		}
		&__state {
			&.euro-sign {
				right: 1.8em;
			}
		}
	}
}
