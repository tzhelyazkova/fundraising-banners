:root {
	--banner-color-gray: #808080;
}

#WMDE_Banner-form {
	.select-group {
		&__custom-input {
			&:focus,
			&:active {
				border: 0;
				border-bottom: 1px solid var( --banner-color-gray );
			}
			&--value-entered {
				color: var( --banner-color-green );
			}
			border: 0;
			border-radius: 0.4em;
			border-bottom: 1px solid var( --banner-color-gray );
			background-color: unset;
			width: 86%;
			margin: 0 7%;
		}
		&__state {
			&.euro-sign {
				right: 0;
			}
		}
	}
}
